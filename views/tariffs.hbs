<script defer src="/js/tariffs.js"></script>
<div id="divTarif" class="container mt-5 col-4">
  <ul class="list-group col-12">
    <li class="list-group-item list-group-item-info">Взрослый билет рабочий день
      -
      {{tarif.adult_work}}
      руб.</li>
    <li class="list-group-item list-group-item-info">Взрослый билет выходной
      день -
      {{tarif.adult_week}}
      руб.</li>
    <br />
    <li class="list-group-item list-group-item-warning">Детский билет рабочий
      день -
      {{tarif.child_work}}
      руб.</li>
    <li class="list-group-item list-group-item-warning">Детский билет выходной
      день -
      {{tarif.child_week}}
      руб.</li>
  </ul>
</div>

{{#if login}}
  <div class="container col-4 d-flex justify-content-center">
    <button id="divBtn" class="btn btn-success mt-3">Изменить Тарифы</button>
  </div>
{{/if}}


<form
  id="formTar"
  class="container col-4 mt-4 p-2"
  method="post"
  action="/tariffs"
  style="display: none;
  background-color: rgba(255, 255, 255, 0.7)"
>

  <div class="form-group mt-2">
    <label class="form-label">Взрослый билет - рабочий день</label>
    <input
      type="number"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      name="adult_work"
      value="{{tarif.adult_work}}"
    />

  </div>
  <div class="form-group mt-1">
    <label class="form-label">Взрослый билет - выходной день</label>
    <input
      type="number"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      name="adult_week"
      value="{{tarif.adult_week}}"
    />

  </div>
  <div class="form-group mt-1">
    <label class="form-label">Детский билет - рабочий день</label>
    <input
      type="number"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      name="child_work"
      value="{{tarif.child_work}}"
    />

  </div>
  <div class="form-group mt-1">
    <label class="form-label">Детский билет - выходной день</label>
    <input
      type="number"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      name="child_week"
      value="{{tarif.child_week}}"
    />
  <div class="text-center">
    <button type="submit" class="btn btn-success my-2" >Сохранить Тарифы</button>
  </div>
  </div>
</form>

